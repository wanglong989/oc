header.header-box
    .container
        .navbar-header
            a.c1.login-box.navbar-brand(href="/") 瞄一眼
        p.navbar-text.navbar-right
            if user
                span.navbar-link() 欢迎，#{user.name}
                span &nbsp;|&nbsp;
                a.c1.navbar-link(href="/user/logout") 退出
            else
                a.c1.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") 注册
                    span &nbsp;|&nbsp;
                    a.c1.navbar-link(href="#",data-toggle="modal",data-target="#signinModal") 登录

.placeholder-height


#signupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="post",action="/user/signup")
                .modal-header
                    .modal-body
                        .form-group
                            label(for="signupName") 用户名
                            input#signupName.form-control(name="user[name]",type="text")
                        .form-group
                            label(for="signupPassword") 密码
                            input#signupPassword.form-control(name="user[password]",type="password")

                    .modal-footer
                        button.btn.btn-default(type="button",data-dismiss="modal") 关闭
                        button.btn.btn-success(type="submit") 提交
#signinModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="post",action="/user/signin")
                .modal-header
                    .modal-body
                        .form-group
                            label(for="signupName") 用户名
                            input#signinName.form-control(name="user[name]",type="text")
                        .form-group
                            label(for="signupPassword") 密码
                            input#signinPassword.form-control(name="user[password]",type="password")

                    .modal-footer
                        button.btn.btn-default(type="button",data-dismiss="modal") 关闭
                        button.btn.btn-success(type="submit") 登录

